    <link rel="stylesheet" href="/css/responsive.css" type="text/css" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Document Title
	============================================= -->
    <title>Blog - Timeline Right Sidebar | Canvas</title>

</head>

<body class="stretched">

    <!-- Document Wrapper
	============================================= -->
    <div id="wrapper" class="clearfix">

        <!-- Header
		============================================= -->
        <header id="header" class="full-header">

            <div id="header-wrap">

                <div class="container clearfix">

                    <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>

                    <!-- Logo
					============================================= -->
                    <div id="logo">
                        <a href="/" class="standard-logo" data-dark-logo="images/logo-dark.png"><img src="images/miro.png"
                                alt="Canvas Logo"></a>
                        <a href="/" class="retina-logo" data-dark-logo="images/logo-dark@2x.png"><img src="images/miro.png"
                                alt="Canvas Logo"></a>
                    </div><!-- #logo end -->

                    <!-- Primary Navigation
					============================================= -->
                    <nav id="primary-menu">

                        <ul>
							<li><a href="/"><div>MIRO</div></a></li>
	   
							<li class="mega-menu"><a href="/announce"><div>Notification</div></a></li>
	   
							<li class="mega-menu"><a href="/schedule"><div>Schedule</div></a></li>
	   
							<li class="mega-menu"><a href="/gallery"><div>Gallery</div></a></li>
	   
							<li class="mega-menu"><a href="/notice"><div>Codes</div></a></li>
	   
							<li class="mega-menu"><a href="/health"><div>Health</div></a></li>
	   
							<li class="mega-menu"><a href="/faqs"><div>Posts</div></a></li>
							
						 </ul>

                        

                    </nav><!-- #primary-menu end -->

                </div>

            </div>

        </header><!-- #header end -->

        <!-- Page Title
		============================================= -->
        <section id="page-title">

            <div class="container clearfix">
                <h1>글 작성</h1>

                <ol class="breadcrumb">


                </ol>
            </div>

        </section><!-- #page-title end -->

        <!-- Content
		============================================= -->
        <section id="content">

            <div class="content-wrap">
                <div class="container">


                    <form method="post" action="/announce-rewrite/<%=result._id%> " id="formtag">
                        <!-- method: 글수정을 어떤방식으로 받아오냐, post신호가 get보다 더 알맞음, 보안성 -->
                        <div class="form-group">
                            <label for="exampleFormControlInput1">제목</label>
                            <input type="text" name="inputTilte" class="form-control" id="exampleFormControlInput1"
                                value="<%=result.title%>" readonly>
                        </div>

                        <div class="form-group">
                            <label for="exampleFormControlInput1">작성자</label>
                            <input type="text" name="inputName" class="form-control" id="exampleFormControlInput1"
                                value="<%=result.name%>" readonly>
                        </div>

                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">내용</label>
                            <textarea class="form-control" name="inputContent" id="exampleFormControlTextarea1" rows="10"
                                placeholder="<%=result.content%>"></textarea>
                        </div>
                    </form>

                    <div style="text-align : right;">
                        <a href="/Announce"><button class="btn btn-secondary btn-lg">목록으로가기</button></a>
                        <a href="#" onClick="document.getElementById('formtag').submit()"><button class="btn btn-secondary btn-lg">수정하기</button></a>
                    </div>
                    <div class="container clearfix">

                        <!-- Post Content
					============================================= -->
                        <div class="postcontent nobottommargin clearfix">

                            <!-- Posts
						============================================= -->


                        </div><!-- .postcontent end -->

                        <!-- Sidebar
					============================================= -->


                    </div>

                </div>

        </section><!-- #content end -->

        <!-- Footer
		============================================= -->


    </div>

    <!-- Copyrights
			============================================= -->


    </footer><!-- #footer end -->

    </div><!-- #wrapper end -->

    <!-- Go To Top
	============================================= -->
    <div id="gotoTop" class="icon-angle-up"></div>

    <!-- External JavaScripts
	============================================= -->
    <script type="text/javascript" src="/js/jquery.js"></script>
    <script type="text/javascript" src="/js/plugins.js"></script>

    <!-- Footer Scripts
	============================================= -->
    <script type="text/javascript" src="/js/functions.js"></script>

</body>

</html>